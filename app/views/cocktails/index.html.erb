<div class="banner">
<h1>Cocktails</h1></div>
<%= link_to "+ new cocktail", new_cocktail_url, method: :get %>

<% @cocktails.each do |cocktail| %>
  <h2><%= cocktail.name %></h2>
  <%= link_to "details", cocktail_path(cocktail) %>
  <p>
  <%= link_to cocktail_path(cocktail), method: :delete do %>
  <i class="fas fa-trash-alt"></i>
  <% end %> </p>
<% end %>
